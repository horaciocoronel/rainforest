<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <ul>
        <li><%= link_to 'New Pizza User', new_users_path %></li>
        <li><%= link_to 'Login for your pizza', new_sessions_path %></li>


        <% if current_user %>
          <li><%= link_to 'Logout', sessions_path, method: :delete %></li>
          <p> Hello <%= current_user.email %> </p>
        <% else %>
          <li>Please login to see our other pizza items. </li>
        <% end %>



      </ul>
    </nav>

    <% if flash[:notice] %>
          <p class="notice"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:alert] %>
          <p class="alert"><%= flash[:alert] %></p>
        <% end %>





    <%= yield %>




  </body>
</html>
