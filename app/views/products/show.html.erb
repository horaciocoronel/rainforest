

<h1> <%= @product.name %> </h1>

<h4>
  Description of Pizza:
  <%= @product.description %>
</h4>

<h5>
  Price per Pizza:
  <%= @product.price_in_cents %>
</h5>

<h5>  Reviews: </h5>
<% @product.reviews.each do |our_comment|%>

  <p>
    <ul>
      <li> <%= our_comment.created_at %> | <%= our_comment.comment %> </li>
    </ul>
  </p>
<% end %>

<h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>

    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>




<p><%= link_to 'Edit', edit_product_path %> | <%= link_to 'Delete', product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete the product '#{@product.name}'? This cannot be undone!"} %></p>
